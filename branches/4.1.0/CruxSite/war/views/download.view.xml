<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:xdev="http://www.cruxframework.org/crux/crossDevice"
	xmlns:site="http://www.cruxframework.org/crux/site"
	title="Crux Framework - Download" useResource="downloadResources">
	<gwt:flexTable id="insideContentDown">
		<gwt:row>
			<gwt:cell>
				<gwt:widget>
					<gwt:flexTable id="mainDownloadMessagePanel">
						<gwt:row>
							<gwt:cell>
								<gwt:widget>
							 		<gwt:label id="downloadPageSecondaryTitle" text="Dowload the lastest version of Crux" styleName="h1"/>
							 	</gwt:widget>
							</gwt:cell>
						</gwt:row>
						<gwt:row>
							<gwt:cell>
							 	<gwt:html>
							 		<p>Click the icon below and download the lastest version of Crux Framework. 
							 		The distribution comes with sample projects, API JavaDocs, visual installer and project generator. 
							 		Give it a try!</p>
						 		</gwt:html>
							</gwt:cell>
						</gwt:row>
					</gwt:flexTable>
				</gwt:widget>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:html><div class="Risk"/></gwt:html>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:widget>
					<gwt:grid id="downloadPanel" width="100%">
						<gwt:row>
							<gwt:cell verticalAlignment="top">
								<gwt:widget>
									<xdev:storyboard id="downloadBoard" styleName="downloadBoard" largeDeviceItemWidth="420px" largeDeviceItemHeight="220px" smallDeviceItemHeight="170px">
										<gwt:flexTable id="downloadLinkPanel" cellSpacing="10">
											<gwt:row>
												<gwt:cell rowSpan="2">
													<gwt:widget>
														<xdev:anchor id="downloadAnchor" href="http://crux-framework.googlecode.com/files/crux-4.1.0.zip">
															<img src="${downloadResources.iconDownload}" />
														</xdev:anchor>			
													</gwt:widget>
												</gwt:cell>
												<gwt:cell><gwt:html><h1>Crux Framework 4</h1></gwt:html></gwt:cell>
											</gwt:row>
											<gwt:row>
												<gwt:cell><gwt:html>Version 4.1.0, All platforms - ZIP File, 12.5MB</gwt:html></gwt:cell>
											</gwt:row>
											<gwt:row>
												<gwt:cell colSpan="2" styleName="p" horizontalAlignment="center">
													<gwt:widget>
														<gwt:horizontalPanel id="olderVersionsLinkPanel" verticalAlignment="top">
															<gwt:label styleName="ShyText" id="areYoulookingLabel" text="... or are you looking for"/>
															<xdev:anchor styleName="ShyLink" id="olderVersionsAnchor" text="older versions" href="http://goo.gl/dLD4J" target="downloadWindow"/>
															<gwt:label styleName="ShyText" id="areYoulookingLabel2" text="?"/>
														</gwt:horizontalPanel>
													</gwt:widget>
												</gwt:cell>
											</gwt:row>
										</gwt:flexTable>
										<gwt:verticalPanel id="releaseFeatures" styleName="divDownTxt" horizontalAlignment="left">
											<gwt:label id="releaseTitle" text="Main features in this version:" styleName="divDownTxtTitle"/>
											<gwt:HTML id="releaseFeatsListPanel">
												<ul>
													<li><span style="text-decoration:underline; margin-right:10px">Views:</span> support for nested views into a single document;</li>
													<li><span style="text-decoration:underline; margin-right:10px">Client IoC:</span> a new IoC container for client side code;</li>
													<li><span style="text-decoration:underline; margin-right:10px">Cross-Device:</span> new widgets that can adapt its rendering, according to the running device;</li>
													<li><span style="text-decoration:underline; margin-right:10px">GWT Compatibility:</span> compatible with GWT 2.4;</li>
												</ul>
											</gwt:HTML>
										</gwt:verticalPanel>
									</xdev:storyboard>
								</gwt:widget>
							</gwt:cell>
						</gwt:row>
					</gwt:grid>
				</gwt:widget>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:html><div class="Risk"/></gwt:html>
			</gwt:cell>
		</gwt:row>
	</gwt:flexTable>
</v:view>