<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:site="http://www.cruxframework.org/crux/site"
	xmlns:xdev="http://www.cruxframework.org/crux/crossDevice"
	onLoad="rssController.onLoad" useController="rssController,bannerController" title="${siteMessages.siteTitle}">
	
	<gwt:grid id="contentAreas" styleName="ContentAreas" cellPadding="0" cellSpacing="0">
		<gwt:row>
			<gwt:cell styleName="ContentLeft"><gwt:html>.</gwt:html></gwt:cell>
			<gwt:cell styleName="ContentCenter">
				<gwt:widget>
					<gwt:flexTable id="BannerAndNews" cellPadding="0" cellSpacing="0" styleName="BannerAndNews">
						<gwt:row>
							<gwt:cell styleName="BannerArea" colSpan="3">
								<gwt:widget>
									 <xdev:promoBanner id="banner" largeBannersHeight="300px" smallBannersHeight="300px" width="900px" transitionDuration="400" autoTransitionInterval="10000">
									 	<xdev:banner image="../img/banner-fast.jpg"  buttonLabel="${siteMessages.bannerActionLearnMore}" title="${siteMessages.bannerFastTitle}" text="${siteMessages.bannerFastText}" onSelect="bannerController.onClickBannerFast"/>
									 	<xdev:banner image="../img/banner-social.jpg" buttonLabel="${siteMessages.bannerActionLearnMore}" title="${siteMessages.bannerSocialTitle}" text="${siteMessages.bannerSocialText}" styleName="longText" onSelect="bannerController.onClickBannerSocial"/>
									 	<xdev:banner image="../img/banner-java.jpg" buttonLabel="${siteMessages.bannerActionLearnMore}" title="${siteMessages.bannerJavaTitle}" text="${siteMessages.bannerJavaText}" onSelect="bannerController.onClickBannerJava"/>
									 	<xdev:banner image="../img/banner-cross-device.jpg" buttonLabel="${siteMessages.bannerActionLearnMore}" title="${siteMessages.bannerCrossDeviceTitle}" text="${siteMessages.bannerCrossDeviceText}" onSelect="bannerController.onClickBannerCrossDevice"/>
									 </xdev:promoBanner>
								</gwt:widget>
							</gwt:cell>
						</gwt:row>
						<gwt:row>
							<gwt:cell styleName="ContentHorizontalSeparator" colSpan="3">
								<gwt:text>.</gwt:text>
							</gwt:cell>
						</gwt:row>
						<gwt:row>
							<gwt:cell colSpan="3" height="50px">
								<gwt:text></gwt:text>
							</gwt:cell>
						</gwt:row>
						<gwt:row>
							<gwt:cell>
								<gwt:widget>
									<xdev:storyboard id="newsBoard" largeDeviceItemWidth="430px" largeDeviceItemHeight="220px" 
													width="100%" styleName="newsBoard" smallDeviceItemHeight="300px">
										<site:rssPanel id="blogFeeds" title="${siteMessages.blogFeedsTitle}" maxTitleSize="45" width="100%"/>
										<site:rssPanel id="projectFeeds" title="${siteMessages.projectFeedsTitle}" maxTitleSize="45" width="100%"/>
									</xdev:storyboard>
								</gwt:widget>
							</gwt:cell>
<!-- 							<gwt:cell styleName="NewsArea"> -->
<!-- 								<gwt:widget> -->
<!-- 									<site:rssPanel id="blogFeeds" title="${siteMessages.blogFeedsTitle}" maxTitleSize="45" width="100%"/> -->
<!-- 								</gwt:widget> -->
<!-- 							</gwt:cell> -->
							
<!-- 							<gwt:cell styleName="NewsSeparator"> -->
<!-- 								<gwt:html>.</gwt:html> -->
<!-- 							</gwt:cell> -->
							
<!-- 							<gwt:cell styleName="FeedsArea"> -->
<!-- 								<gwt:widget> -->
<!-- 									<site:rssPanel id="projectFeeds" title="${siteMessages.projectFeedsTitle}" maxTitleSize="45" width="100%"/> -->
<!-- 								</gwt:widget> -->
<!-- 							</gwt:cell> -->
						</gwt:row>
					</gwt:flexTable>
				</gwt:widget>														
			</gwt:cell>
			<gwt:cell styleName="ContentRight"><gwt:html>.</gwt:html></gwt:cell>
		</gwt:row>
	</gwt:grid>	
</v:view>