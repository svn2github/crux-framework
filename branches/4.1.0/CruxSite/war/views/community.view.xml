<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:site="http://www.cruxframework.org/crux/site"
	xmlns:xdev="http://www.cruxframework.org/crux/crossDevice"
	xmlns:tmp="http://www.cruxframework.org/templates/siteTemplates"
	title="Community">

	<gwt:grid id="insideContent" styleName="communityContent">
		<gwt:row>
			<gwt:cell>
				<gwt:html id="htmlContent">
					<h1>Crux Community</h1>
					<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc et nisl non lectus rhoncus fringilla. Sed imperdiet bibendum sapien, a mattis magna accumsan ut. Porta, neque eget aliquet varius, metus ipsum porttitor sapien.</p>
					<div class="Risk"></div>
				</gwt:html>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:widget>
					<xdev:storyboard id="communityStoryboard" width="100%" largeDeviceItemWidth="440px" largeDeviceItemHeight="240px" smallDeviceItemHeight="230px">
						<tmp:siteReference onSelect="" styleName="BlockTypes" siteTitle="Crux's Blog" 
										   siteDescription="Visit our blog, there you can find helpful video tutorials, tips and news." 
										   image="../img/icon_blogger.png" buttonLabel="Visit the Blog" id="blogSite"/>
						<tmp:siteReference onSelect="" styleName="BlockTypes b2" siteTitle="Crux's Project" 
										   siteDescription="Wiki,Issues, commit road and much more can be found on our Google Code page." 
										   image="../img/icon_google.png" buttonLabel="Visit the Page" id="projectSite"/>
						<tmp:siteReference onSelect="" styleName="BlockTypes" siteTitle="Crux's Forum" 
										   siteDescription="Our forum. There you can post question about Crux usage." 
										   image="../img/icon_forum.png" buttonLabel="Visit the Forum" id="forumSite"/>
						<tmp:siteReference onSelect="" styleName="BlockTypes b2" siteTitle="Crux's Team" 
										   siteDescription="Our contact: team@cruxframework.org" 
										   image="" buttonLabel="Talk to us" id="talkSite"/>
					
					</xdev:storyboard>
				</gwt:widget>
			</gwt:cell>
		</gwt:row>
	</gwt:grid>
</v:view>