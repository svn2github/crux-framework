<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:site="http://www.cruxframework.org/crux/site"
	xmlns:xdev="http://www.cruxframework.org/crux/crossDevice"
	xmlns:tmp="http://www.cruxframework.org/templates/siteTemplates" title="${siteMessages.siteTitle}" 
	useResource="siteResources, communityResources">
	
	<gwt:flexTable id="learnContent" width="900px">
		<gwt:row>
			<gwt:cell>
				<gwt:html id="htmlContentLearn">
					<h1>Learn more about Crux</h1>
					<p>Visit Crux manual <a href="https://code.google.com/p/crux-framework/wiki/UserManual">here</a> or access our community pages below.</p>
					<div class="risk"></div>
				</gwt:html>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:html id="htmlContent">
					<h1>Crux Community</h1>
					<p>Crux is an open source project licensed under the Apache License 2.0. 
					To learn more about the project, report problems, suggest modifications, or get support, please visit our links targeted to the community.</p>
					<div class="risk"></div>
				</gwt:html>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:widget>
					<xdev:storyboard id="communityStoryboard" width="100%" largeDeviceItemWidth="440px" largeDeviceItemHeight="240px" smallDeviceItemHeight="190px">
						<tmp:siteReference href="http://blog.cruxframework.org" styleName="${siteResources.css.blockTypes}" siteTitle="Crux's Blog" 
										   siteDescription="Visit our blog, there you can find helpful video tutorials, tips and news." 
										   image="${communityResources.iconBlogger}" buttonLabel="Visit the Blog" id="blogSite"/>
						<tmp:siteReference href="http://crux-framework.googlecode.com" styleName="${siteResources.css.blockTypes2}" siteTitle="Crux's Project" 
										   siteDescription="Wiki,Issues, commit road and much more can be found on our Google Code page." 
										   image="${communityResources.iconGoogle}" buttonLabel="Visit the Page" id="projectSite"/>
						<tmp:siteReference href="http://groups.google.com/group/crux-framework" styleName="${siteResources.css.blockTypes}" siteTitle="Crux's Forum" 
										   siteDescription="Our forum. There you can post question about Crux usage." 
										   image="${communityResources.iconForum}" buttonLabel="Visit the Forum" id="forumSite"/>
						<tmp:siteReference href="mailto:team@cruxframework.org" styleName="${siteResources.css.blockTypes2}" siteTitle="Crux's Team" 
										   siteDescription="Our contact: team@cruxframework.org" 
										   image="${communityResources.iconForum}" buttonLabel="Talk to us" id="talkSite"/>
					</xdev:storyboard>
				</gwt:widget>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:html>
					<h1>Tutorials</h1>
				</gwt:html>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:widget>
					<site:tutorial id="quickstart" estimatedTime="3 min" width="900px" largeImage="../img/img_example_learn.png" 
								   tutorialTitle="Using Project Generator" styleName="${siteResources.css.siteTutorial}"
								   tutorialSubtitle="This is a video lesson that shows how to use the project generator tool to create a basic Crux Project"
								   learnDescription="How to start a project with Crux and Eclipse and how to make a simple Hello World."
								   tutorialUrl="http://blog.cruxframework.org/2011/05/creating-your-first-application-with.html"/>
				
				</gwt:widget>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:html>
					<div class="risk"></div>
				</gwt:html>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:widget>
					<site:tutorial id="gadget" estimatedTime="6 min" width="900px" largeImage="../img/img_opensocial.png" 
								   tutorialTitle="Creating Gadgets" styleName="${siteResources.css.siteTutorial}"
								   tutorialSubtitle="This is a video lesson that shows how to create google gadgets using Crux"
								   learnDescription="How to make a simple Hello World gadget."
								   tutorialUrl="http://blog.cruxframework.org/2011/05/creating-gadgets-with-crux.html"/>
				</gwt:widget>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:html>
					<div class="risk"></div>
				</gwt:html>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:widget>
					<site:tutorial id="example" estimatedTime="6 min" width="900px" largeImage="../img/img_example_learn.png" 
								   tutorialTitle="Creating Gadgets" styleName="${siteResources.css.siteTutorial}"
								   tutorialSubtitle="Another example"
								   learnDescription="Example description."
								   tutorialUrl="http://blog.cruxframework.org/2011/05/creating-gadgets-with-crux.html"/>
				</gwt:widget>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:html>
					<div class="risk"></div>
				</gwt:html>
			</gwt:cell>
		</gwt:row>
		
	</gwt:flexTable>
</v:view>