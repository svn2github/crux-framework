<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:site="http://www.cruxframework.org/crux/site"
	xmlns:xdev="http://www.cruxframework.org/crux/crossDevice"
	onLoad="rssController.onLoad" useController="rssController,bannerController,learnController" title="${siteMessages.siteTitle}" useResource="siteResources">
	
	<gwt:flexTable id="learnContent" width="900px">
		<gwt:row>
			<gwt:cell>
				<gwt:html id="htmlContentLearn">
					<h1>Learn more from Crux</h1>
					<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc et nisl non lectus rhoncus fringilla. Sed imperdiet bibendum sapien, a mattis magna accumsan ut. Porta, neque eget aliquet varius, metus ipsum porttitor sapien.</p>
					<div class="risk"></div>
				</gwt:html>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:html>
					<h1>Community</h1>
				</gwt:html>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:widget>
					<gwt:horizontalPanel id="panel1">
						<gwt:label id="comLabel1" text="If you want to get involved... Go to our community "/>
						<gwt:anchor id="communityAnchor" styleName="${siteResources.css.shyLink}" text="website" onClick="learnController.goToCommunity"/>
						<gwt:label id="comLabel2" text=" and get acquainted with our friends."/>
					</gwt:horizontalPanel>
				</gwt:widget>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:html><p/></gwt:html>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:html>
					<h1>Tutorial</h1>
				</gwt:html>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:widget>
					<site:tutorial id="quickstart" estimatedTime="3 min" width="900px" largeImage="../img/img_example_learn.png" 
								   tutorialTitle="Using Project Generator" styleName="${siteResources.css.siteTutorial}"
								   tutorialSubtitle="This is a video lesson that shows how to use the project generator tool to create a basic Crux Project"
								   learnDescription="How to start a project with Crux and Eclipse and how to make a simple Hello World."
								   tutorialUrl="http://blog.cruxframework.org/2011/05/creating-your-first-application-with.html"/>
				
				</gwt:widget>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:html>
					<div class="risk"></div>
				</gwt:html>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:widget>
					<site:tutorial id="gadget" estimatedTime="6 min" width="900px" largeImage="../img/img_opensocial.png" 
								   tutorialTitle="Creating Gadgets" styleName="${siteResources.css.siteTutorial}"
								   tutorialSubtitle="This is a video lesson that shows how to create google gadgets using Crux"
								   learnDescription="How to make a simple Hello World gadget."
								   tutorialUrl="http://blog.cruxframework.org/2011/05/creating-gadgets-with-crux.html"/>
				</gwt:widget>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:html>
					<div class="risk"></div>
				</gwt:html>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:widget>
					<site:tutorial id="example" estimatedTime="6 min" width="900px" largeImage="../img/img_example_learn.png" 
								   tutorialTitle="Creating Gadgets" styleName="${siteResources.css.siteTutorial}"
								   tutorialSubtitle="Another example"
								   learnDescription="Example description."
								   tutorialUrl="http://blog.cruxframework.org/2011/05/creating-gadgets-with-crux.html"/>
				</gwt:widget>
			</gwt:cell>
		</gwt:row>
		<gwt:row>
			<gwt:cell>
				<gwt:html>
					<div class="risk"></div>
				</gwt:html>
			</gwt:cell>
		</gwt:row>
		
	</gwt:flexTable>
</v:view>