<t:template 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:t="http://www.cruxframework.org/templates"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:xdev="http://www.cruxframework.org/crux/crossDevice"
	library="siteTemplates">
	<gwt:HTMLPanel id="#{id}Panel">
		<div class="#{styleName}">
			<div class="blockImg">
				<gwt:image id="#{id}" url="#{image}"/>
			</div>
			<div class="blockText">
				<h1>#{siteTitle}</h1>
				<p>#{siteDescription}</p>
			</div>
			<div class="clear"></div>
			<div class="blockText">
				<xdev:anchor id="#{id}Btn" href="#{href}" target="_blank" preventDefaultTouchEvents="true" >
					<div class="refButton">#{buttonLabel}</div>
				</xdev:anchor>
			</div>
			<div class="risk"></div>
		</div>
	</gwt:HTMLPanel>
</t:template>