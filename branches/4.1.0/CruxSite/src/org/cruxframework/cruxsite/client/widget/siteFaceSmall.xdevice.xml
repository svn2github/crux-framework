<x:xdevice xmlns="http://www.w3.org/1999/xhtml"
		   xmlns:x="http://www.cruxframework.org/xdevice"
           xmlns:gwt="http://www.cruxframework.org/crux/gwt"
		   xmlns:crux="http://www.cruxframework.org/crux/widgets"
		   xmlns:xdev="http://www.cruxframework.org/crux/crossDevice"
           useController="siteFaceSmallController" useResource="siteResources">
	<gwt:flowPanel id="canvas" height="100%">
		<gwt:flowPanel id="menu" styleName="${siteResources.css.headerMenu}"></gwt:flowPanel>
		<gwt:flowPanel id="header" styleName="${siteResources.css.header}">
			<xdev:button id="menuButton" styleName="${siteResources.css.buttonMenu}" onSelect="siteFaceSmallController.openOrCloseMenu" preventDefaultTouchEvents="true">
	        	<div></div>
	            <div></div>
	            <div></div>
	        </xdev:button>
	        <gwt:label id="cruxLabel" text="CRUX" styleName="${siteResources.css.cruxLabel}"/>
	        <gwt:image id="cruxLogo" url="${siteResources.cruxLogo}" styleName="${siteResources.css.cruxLogo}"/>
	    </gwt:flowPanel>
	    <crux:horizontalSwapViewContainer id="viewContainer" width="100%" height="100%" >
	    </crux:horizontalSwapViewContainer>
	    <gwt:flowPanel id="footer" styleName="${siteResources.css.footer}">
	    	<gwt:label id="poweredLabel" styleName="${siteResources.css.poweredLabel}" text="Powered By"/>
	    	<gwt:image id="poweredImage" url="${siteResources.iconPowered}" styleName="${siteResources.css.poweredImage}"/>
	    </gwt:flowPanel>
	</gwt:flowPanel>
</x:xdevice>