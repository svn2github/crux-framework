<t:template xmlns="http://www.w3.org/1999/xhtml"
			xmlns:c="http://www.cruxframework.org/crux"  
			xmlns:gwt="http://www.cruxframework.org/crux/gwt"
			xmlns:crux="http://www.cruxframework.org/crux/widgets"
            xmlns:t="http://www.cruxframework.org/templates" library="gadgetContainer"
            useController="tabLayoutController"> 
    <script type="text/javascript">
    	_containerHeight = "#{height}";
    </script>
	<crux:rollingTabPanel id="layoutTabManager" visibleTab="0" onLoadWidget="tabLayoutController.onLoad" style="overflow: hidden">
		<crux:tab>
			<crux:tabText>#{profileTabTitle}</crux:tabText>
			<crux:panelContent>
				<gwt:HTML id="gridContainer" height="100%"/>
			</crux:panelContent>
		</crux:tab>
	</crux:rollingTabPanel>
</t:template>