<!DOCTYPE html>
<html 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:c="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:site="http://www.cruxframework.org/crux/site"
>
	<head>
		<title>Crux Framework - Official Site</title>
		<link rel="stylesheet" href="css/site.css"/>
	</head>
	
	<body>
	
		<script type="text/javascript" src="cruxsite/cruxsite.nocache.js"></script>
		<c:screen onLoad="rssController.onLoad" useController="rssController,bannerController" title="${siteMessages.siteTitle}"/>
		
		<div id="canvas" style="height:100%">
			<gwt:grid id="frame" styleName="Frame" cellSpacing="0" cellPadding="0">
				<gwt:row>
					<gwt:cell styleName="Header" >
						<gwt:widget>
							<gwt:grid id="headerAreas" styleName="HeaderAreas" cellSpacing="0" cellPadding="0">
								<gwt:row>
									<gwt:cell styleName="HeaderMenuLeft">
										<gwt:html>.</gwt:html>
									</gwt:cell>
									<gwt:cell styleName="HeaderMenu" verticalAlignment="bottom">
										<gwt:widget>
											<gwt:grid id="headerGrid" width="100%" styleName="HeaderMenuGrid">
												<gwt:row>
													<gwt:cell height="50" verticalAlignment="middle" styleName="HeaderMenuLabel">
														<gwt:text>${siteMessages.headerLabel}</gwt:text>
													</gwt:cell>
												</gwt:row>
												<gwt:row>
													<gwt:cell height="50" verticalAlignment="middle" styleName="HeaderMenuItems">
														<gwt:widget>
															<gwt:horizontalPanel id="menuBar">
																<gwt:anchor id="downloadMenuItem" text="${siteMessages.downloadMenuItem}"/>
															</gwt:horizontalPanel>
														</gwt:widget>
													</gwt:cell>
												</gwt:row>
											</gwt:grid>
										</gwt:widget>
									</gwt:cell>
									<gwt:cell styleName="HeaderMenuRight">
										<gwt:html>.</gwt:html>
									</gwt:cell>
								</gwt:row>
							</gwt:grid>
						</gwt:widget>
					</gwt:cell>
				</gwt:row>
				<gwt:row>
					<gwt:cell styleName="Content" verticalAlignment="top">
						<gwt:widget>
							<gwt:grid id="contentAreas" styleName="ContentAreas" cellPadding="0" cellSpacing="0">
								<gwt:row>
									<gwt:cell styleName="ContentLeft"><gwt:html>.</gwt:html></gwt:cell>
									<gwt:cell styleName="ContentCenter">
										<gwt:widget>
											<gwt:flexTable id="BannerAndNews" cellPadding="0" cellSpacing="0" styleName="BannerAndNews">
												<gwt:row>
													<gwt:cell styleName="BannerArea" colSpan="3">
														<gwt:widget>
															 <site:promoBanner id="banner" bannersHeight="300px" width="900px" transitionDuration="400">
															 	<site:banner backgroundImageURL="../img/banner-fast.jpg" buttonLabel="${siteMessages.bannerActionLearnMore}" title="${siteMessages.bannerFastTitle}" text="${siteMessages.bannerFastText}" onClick="bannerController.onClickBannerFast"/>
															 	<site:banner backgroundImageURL="../img/banner-social.jpg" buttonLabel="${siteMessages.bannerActionLearnMore}" title="${siteMessages.bannerSocialTitle}" text="${siteMessages.bannerSocialText}"  onClick="bannerController.onClickBannerSocial" styleName="longText"/>
															 	<site:banner backgroundImageURL="../img/banner-java.jpg" buttonLabel="${siteMessages.bannerActionLearnMore}" title="${siteMessages.bannerJavaTitle}" text="${siteMessages.bannerJavaText}" onClick="bannerController.onClickBannerJava"/>
															 	<site:banner backgroundImageURL="../img/banner-cross-device.jpg" buttonLabel="${siteMessages.bannerActionLearnMore}" title="${siteMessages.bannerCrossDeviceTitle}" text="${siteMessages.bannerCrossDeviceText}" onClick="bannerController.onClickBannerCrossDevice"/>
															 	<site:banner backgroundImageURL="../img/banner-triggo.jpg" buttonLabel="${siteMessages.bannerActionVisitNow}" title="${siteMessages.bannerTriggoTitle}" text="${siteMessages.bannerTriggoText}" onClick="bannerController.onClickBannerTriggo"/>
															 </site:promoBanner>
														</gwt:widget>
													</gwt:cell>
												</gwt:row>
												<gwt:row>
													<gwt:cell styleName="ContentHorizontalSeparator" colSpan="3">
														<gwt:text>.</gwt:text>
													</gwt:cell>
												</gwt:row>
												<gwt:row>
													<gwt:cell colSpan="3" height="50px">
														<gwt:text></gwt:text>
													</gwt:cell>
												</gwt:row>
												<gwt:row>
													<gwt:cell styleName="NewsArea">
														<gwt:html>
														</gwt:html>
													</gwt:cell>
													
													<gwt:cell styleName="NewsSeparator">
														<gwt:html>.</gwt:html>
													</gwt:cell>
													
													<gwt:cell styleName="FeedsArea">
														<gwt:widget>
															<site:rssPanel id="blogFeeds" title="${siteMessages.blogFeedsTitle}" maxTitleSize="45" width="100%"/>
														</gwt:widget>
													</gwt:cell>
												</gwt:row>
											</gwt:flexTable>
										</gwt:widget>														
									</gwt:cell>
									<gwt:cell styleName="ContentRight"><gwt:html>.</gwt:html></gwt:cell>
								</gwt:row>
							</gwt:grid>
						</gwt:widget>
					</gwt:cell>
				</gwt:row>
				<gwt:row>
					<gwt:cell styleName="Footer" >
						<gwt:widget>
								<gwt:grid id="footerItems" styleName="FooterContent" cellPadding="0" cellSpacing="0">
									<gwt:row>
										<gwt:cell styleName="CruxLabelFooter" verticalAlignment="middle">
											<gwt:text>Cruxframework.org</gwt:text>
										</gwt:cell>
										<gwt:cell styleName="CruxLabelFooter2" verticalAlignment="middle">
											<gwt:text>Powered by:</gwt:text>
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell styleName="CruxLabelFooter3">
											<gwt:widget>
												<gwt:horizontalPanel id="footerLinks" styleName="FooterLinks">
													<gwt:anchor id="about" href="#" text="About" />
													<gwt:label id="separator1" styleName="LinkSeparator"/>
													<gwt:anchor id="services" href="#" text="Services" />
													<gwt:label id="separator2" styleName="LinkSeparator"/>
													<gwt:anchor id="contact" href="#" text="Contact" />
													<gwt:label id="separator3" styleName="LinkSeparator"/>
													<gwt:anchor id="contribute" href="#" text="Contribute" />
												</gwt:horizontalPanel>
											</gwt:widget>
										</gwt:cell>
										<gwt:cell styleName="CruxLabelFooter4">
											<gwt:widget>
												<gwt:horizontalPanel id="rowImgsFooter">
													<gwt:image id="imgIconFooter1" url="img/icons_powered_1.png"/>
													<gwt:image id="imgIconFooter2" url="img/icons_powered_2.png"/>
													<gwt:image id="imgIconFooter3" url="img/icons_powered_3.png"/>
												</gwt:horizontalPanel>
											</gwt:widget>
										</gwt:cell>
									</gwt:row>
								</gwt:grid>
						</gwt:widget>
					</gwt:cell>
				</gwt:row>
			</gwt:grid>
		</div>
	</body>
</html>

