<!DOCTYPE html>
<html 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:c="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
>
	<head>
		<title>Crux Framework - Official Site</title>
		<style>
			BODY, HTML
			{
				height: 100%;
				margin: 0px;
				padding: 0px;
			}
			
			BODY
			{
				background: url(img/body-texture.png) 0px 224px repeat-x;
				background-color: #B8BCBD;
			}
		
			.Frame
			{
				width: 100%;
				height: 100%;
			}
			
			.Header
			{
				height: 224px;
				background-color: #00242C;
			}
			
			.HeaderAreas
			{
				width: 100%;
				height: 224px;
			}
		
			.HeaderMenuLeft
			{
				background: url(img/header-menu-left.jpg) bottom right no-repeat;
			}
		
			.HeaderMenu
			{
				width: 870px;
				background: url(img/header-logo.jpg) top left no-repeat;
				height: 224px;
			}
			
			.Content
			{
				background: url(img/body-mountains.png) bottom repeat-x;
				padding-top: 10px;
			}
			
			.Footer
			{
				height: 104px;
				width: 100%;
				position: relative;
				margin-top: -104px;
				clear:both;
				background-image: url(img/footer-bg.png);
			}
			
			.FooterContent
			{
				width: 100%;
				background: url(img/footer-texture.png) bottom no-repeat;
				height: 104px;
			}
			
		</style>
	</head>

	<body>
		<script type="text/javascript" src="cruxsite/cruxsite.nocache.js"></script>
		
		<gwt:grid id="dockPanel" styleName="Frame" >
			<gwt:row>
				<gwt:cell styleName="Header" >
					<gwt:widget>
						<gwt:grid id="headerPanel" >
							<gwt:row>
								<gwt:cell styleName="HeaderMenuLeft">
									<gwt:html> </gwt:html>
								</gwt:cell>
								<gwt:cell styleName="HeaderMenu">
									<gwt:html> </gwt:html>
								</gwt:cell>
								<gwt:cell styleName="HeaderMenuRight">
									<gwt:html> </gwt:html>
								</gwt:cell>
							</gwt:row>
						</gwt:grid>
					</gwt:widget>
				</gwt:cell>
			</gwt:row>
			<gwt:row>
				<gwt:cell styleName="Content">
					<gwt:html>
						sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>
						sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>
						sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>
						sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>
						sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>
						sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>
						sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>
						sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>sdfsadf<br/>					
					</gwt:html>
				</gwt:cell>
			</gwt:row>
			<gwt:row>
				<gwt:cell styleName="Footer" >
					<gwt:widget>
						<gwt:simplePanel id="footerPanel" styleName="FooterContent"></gwt:simplePanel>
					</gwt:widget>
				</gwt:cell>
			</gwt:row>
		</gwt:grid>
	</body>
</html>

