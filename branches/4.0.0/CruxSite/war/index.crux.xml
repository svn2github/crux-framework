<!DOCTYPE html>
<html 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:c="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
>
	<head>
		<title>Crux Framework - Official Site</title>
		<style>
			BODY, HTML
			{
				height: 100%;
				margin: 0px;
				padding: 0px;
			}
			
			BODY
			{
				background: url(img/body-texture.png) 0px 224px repeat-x;
				background-color: #B8BCBD;
			}
		
			.Frame
			{
				width: 100%;
				height: 100%;
			}
			
			.Header
			{
				height: 224px;
				background-color: #00242C;
			}
			
			.HeaderAreas
			{
				width: 100%;
				height: 224px;
			}
		
			.HeaderMenuLeft
			{
			}
		
			.HeaderMenu
			{
				width: 900px;
				background: url(img/header-logo.jpg) top left no-repeat;
				height: 224px;
			}
			
			.Content
			{
				background: url(img/body-mountains.png) bottom repeat-x;
				padding-top: 10px;
			}
			
			.Footer
			{
				height: 104px;
				width: 100%;
				background-image: url(img/footer-bg.png);
			}
			
			.FooterContent
			{
				width: 100%;
				background: url(img/footer-texture.png) bottom no-repeat;
				height: 104px;
			}

			.BannerAndNews
			{
				width: 100%;
			}						
			
			.BannerArea
			{
				height: 350;
				border: solid 1px red;
			}
			
			.ContentAreas
			{
				width: 100%;
				padding-top: 10px;
			}
			
			.ContentLeft, .ContentRight
			{
				font-family: monospace;
				color: #CCCCCC;
			}
			
			.ContentCenter
			{
				width: 900px;
			}
			
		</style>
	</head>

	<body>
	
		<script type="text/javascript" src="cruxsite/cruxsite.nocache.js"></script>
		
		<div id="canvas" style="height:100%">
			<gwt:grid id="frame" styleName="Frame" cellSpacing="0" cellPadding="0">
				<gwt:row>
					<gwt:cell styleName="Header" >
						<gwt:widget>
							<gwt:grid id="headerAreas" styleName="HeaderAreas" cellSpacing="0" cellPadding="0">
								<gwt:row>
									<gwt:cell styleName="HeaderMenuLeft">
										<gwt:html>.</gwt:html>
									</gwt:cell>
									<gwt:cell styleName="HeaderMenu">
										<gwt:html>.</gwt:html>
									</gwt:cell>
									<gwt:cell styleName="HeaderMenuRight">
										<gwt:html>.</gwt:html>
									</gwt:cell>
								</gwt:row>
							</gwt:grid>
						</gwt:widget>
					</gwt:cell>
				</gwt:row>
				<gwt:row>
					<gwt:cell styleName="Content" verticalAlignment="top">
						<gwt:widget>
							<gwt:grid id="contentAreas" styleName="ContentAreas" cellPadding="0" cellSpacing="0">
								<gwt:row>
									<gwt:cell styleName="ContentLeft"><gwt:html>.</gwt:html></gwt:cell>
									<gwt:cell styleName="ContentCenter">
										<gwt:widget>
											<gwt:grid id="BannerAndNews">
												<gwt:row>
													<gwt:cell styleName="BannerArea">
													
													</gwt:cell>
												</gwt:row>
												<gwt:row>
													<gwt:cell styleName="NewsArea">
													
													</gwt:cell>
												</gwt:row>
											</gwt:grid>
										</gwt:widget>														
									</gwt:cell>
									<gwt:cell styleName="ContentRight"><gwt:html>.</gwt:html></gwt:cell>
								</gwt:row>
							</gwt:grid>
						</gwt:widget>
					</gwt:cell>
				</gwt:row>
				<gwt:row>
					<gwt:cell styleName="Footer" >
						<gwt:widget>
							<gwt:simplePanel id="footerContent" styleName="FooterContent"></gwt:simplePanel>
						</gwt:widget>
					</gwt:cell>
				</gwt:row>
			</gwt:grid>
		</div>
	</body>
</html>

